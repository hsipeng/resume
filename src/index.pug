doctype html
html
  head
    meta(charset='utf-8')
    title @lirawx
    meta(name='viewport', content='width=device-width, initial-scale=1, user-scalable=no')
    link(rel='stylesheet', href='style.css')
  body
    nav#language
      .meta(data-lang='en') 标准
      .meta(data-lang='cn') 中式
    main
      section.timeline
        article
          ul.stories
            li.story
              .date ABOUT
              .content 
                h1 Hsi P'eng
                h2 熙
                p
                  a.social-link(href='/resume') 简历
                  a.social-link(href='https://twitter.com/lirawx') Twitter
                  a.social-link(href='https://github.com/lirawx') GitHub
                  a.social-link(href='mailto:i@lirawx.cn') Mail
